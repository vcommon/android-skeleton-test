<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape
            android:shape="rectangle">
            <size
                android:width="128dp"
                android:height="128dp" />
            <corners android:topLeftRadius="6dp" android:bottomLeftRadius="6dp"></corners>

            <solid android:color="#a6000000" />
        </shape>
    </item>

    <!-- gravity 在某些设备上不工作-->
    <item android:width="25dp"
        android:height="25dp" android:gravity="right"
        android:drawable="@mipmap/ic_launcher"></item>


</layer-list>